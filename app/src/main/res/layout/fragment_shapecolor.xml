<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <RadioGroup
        android:id="@+id/rgShapeColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rShapeColorDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Default"/>
        <RadioButton
            android:id="@+id/rShapeColorRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Red"/>
        <RadioButton
            android:id="@+id/rShapeColorGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Green"/>
        <RadioButton
            android:id="@+id/rShapeColorBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blue"/>
    </RadioGroup>

</LinearLayout>